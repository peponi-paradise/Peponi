    <sys:Double x:Key="LineHeight.DisplayLarge">64</sys:Double>
    <FontWeight x:Key="FontWeight.DisplayLarge">Regular</FontWeight>
    <sys:Double x:Key="FontSize.DisplayMedium">45</sys:Double>
